{
	"name": "netservice/ns-mega-menu",
	"description": "WordPress Mega Menu Plugin - 公開品質のメガメニュープラグイン",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Netservice",
			"homepage": "https://netservice.jp/"
		}
	],
	"minimum-stability": "stable",
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"phpcompatibility/php-compatibility": "^9.3",
		"phpstan/phpstan": "^1.10"
	},
	"scripts": {
		"lint": "phpcs",
		"lint:fix": "phpcbf",
		"analyze": "phpstan analyze --memory-limit=1G",
		"test:compatibility": "phpcs --standard=PHPCompatibility --runtime-set testVersion 7.4- .",
		"test:all": [
			"@lint",
			"@analyze",
			"@test:compatibility"
		]
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}